{
  "manifest_version": 2,
  "name": "SJW Substitutions",
  "description": "Making the web a better place",
  "version": "1.0",
  "options_page": "html/config.html",
  "browser_action": {
    "default_icon": {
      "19": "images/enabled.png"
    },
    "default_title": "click to disable substitutions"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "images/icon128.jpg"
  }
}
